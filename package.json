{
  "name": "@digitalcredentials/linked-data-integrity",
  "description": "A VerifiableCredential Data Integrity library for Javascript/Typescript (for use in Node.js, browser, React Native).",
  "version": "0.1.0",
  "scripts": {
    "build": "npm run clear && tsc --declaration --declarationDir dist -p tsconfig.json && tsc -p tsconfig.esm.json",
    "clear": "rimraf dist/*",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "npm run build",
    "prettier": "prettier src --write",
    "rebuild": "npm run clear && npm run build",
    "test": "npm run lint && npm run test-node",
    "test-karma": "karma start karma.conf.js",
    "test-node": "cross-env NODE_ENV=test TS_NODE_PROJECT=tsconfig.spec.json TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'test/*.ts'"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE.md",
    "CHANGELOG.md"
  ],
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "@digitalbazaar/security-context": "^1.0.0",
    "@digitalcredentials/sha256-universal": "^1.1.1",
    "base-x": "^4.0.0",
    "jsonld": "^8.1.0",
    "serialize-error": "^11.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/jsonld": "^1.5.8",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.17",
    "@types/serialize-error": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^24.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "karma": "^6.4.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-typescript": "^5.5.3",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "mocha": {
    "require": "ts-node/register",
    "extension": [
      "ts"
    ],
    "spec": "test/**/*.ts"
  },
  "keywords": [
    "linked data",
    "vc",
    "jsonld",
    "signatures"
  ],
  "engines": {
    "node": ">=16.0"
  },
  "author": {
    "name": "Digital Credentials Consortium",
    "url": "https://github.com/digitalcredentials/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/digitalcredentials/linked-data-integrity"
  },
  "homepage": "https://github.com/digitalcredentials/linked-data-integrity",
  "bugs": "https://github.com/digitalcredentials/linked-data-integrity/issues"
}
