{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/esm",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "mocha"],
    "typeRoots": ["src/declarations.d.ts"]
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src/**/*",
    "test/*.ts",
    ".eslintrc.js",
    "karma.conf.js"
  ],
  "exclude": ["node_modules", "dist"]
}
