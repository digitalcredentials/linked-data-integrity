{
  "compilerOptions": {
    "strict": true,
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/esm",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/declarations.d.ts", "./types.ts"]
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src/**/*",
    ".eslintrc.js",
    "karma.conf.js"
  ],
  "exclude": ["node_modules", "dist", "test"]
}
